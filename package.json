{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.2.0-rc.12",
  "workspaces": [
    "api",
    "db",
    "img",
    "web"
  ],
  "scripts": {
    "setup": "node ./setup",
    "start": "yarn workspaces foreach -ip run start",
    "build": "yarn workspaces foreach -p run build",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "jest",
    "tf": "node --no-warnings ./scripts/tf.js",
    "g:lint": "yarn lint \"$INIT_CWD\"",
    "g:test": "yarn test \"$INIT_CWD\"",
    "psql": "yarn db:psql",
    "repl": "yarn db:repl",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.9",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/eslint-plugin": "^11.7.0",
    "@emotion/react": "^11.7.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-jest": "^27.4.6",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-relay": "^13.0.1",
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "dotenv": "^14.3.2",
    "envars": "^0.3.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "jest": "^27.4.7",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "typescript": "^4.5.5",
    "zx": "^4.3.0"
  },
  "devDependencies": {
    "@jest/types": "^27.4.2",
    "@types/babel__core": "^7.1.18",
    "@types/cross-spawn": "^6.0.2",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.4.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.12"
  },
  "envars": {
    "cwd": "./env"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.cache/",
      "<rootDir>/.github/",
      "<rootDir>/.vscode/",
      "<rootDir>/.yarn/",
      "<rootDir>/api/dist/",
      "<rootDir>/db/",
      "<rootDir>/scripts/",
      "<rootDir>/web/dist/"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
